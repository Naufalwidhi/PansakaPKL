<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_produk_dashboard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mockup_foto_produk"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama_produk_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sepatu Converse"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/nama_toko_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Converse Indonesia"
                    android:textSize="13sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:textColor="#555555"/>

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_detail_transaksi_dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail transaksi"
                        android:textColor="#0F8AF9"
                        android:fontFamily="@font/opensans_regular"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:id="@+id/jumlah_pcs_dashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="11dp"
                        android:text="2 PCS"
                        android:textColor="#555555"
                        android:textSize="11sp"
                        />

                </LinearLayout>

            </LinearLayout>

    </RelativeLayout>

</LinearLayout>